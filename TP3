                   class Shift 
{
    public string Cshift(string str, int shift)
    {
        string UserOutput = null;
        char[] A = null;
        A = str.ToCharArray();
        int temp;
 
        for (int i = 0; i < str.Length;i++ ) 
        {
            temp = (int)(A[i] + shift);
            UserOutput += (char)temp;
        }
        return UserOutput;
    }
