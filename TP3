             while (choix != 0)
            {
                switch (choix)
                {
                    case 1:
                       Console.WriteLine("Veuillez rentrer votre nom pour d√©caler le message : ");
                        

                        break;
                    case 2:
                        
                        break;
                        }
           
            String contenu = LireFichier();
            EcrireFichier(contenu);
           
        }
    }
}
